<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.profile.EditProfileFragment">

    <ImageView
        android:id="@+id/img_item_icon"
        android:layout_width="125dp"
        android:layout_height="24dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="18dp"
        android:paddingTop="0dp"
        android:paddingBottom="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/logo_txt" />

    <ImageView
        android:id="@+id/imgArrowBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_item_icon" />

    <TextView
        android:id="@+id/tvEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/fredo"
        android:text="Edit Profile"
        android:textColor="#6DB9EF"
        app:layout_constraintBottom_toBottomOf="@+id/imgArrowBack"
        app:layout_constraintStart_toEndOf="@+id/imgArrowBack"
        app:layout_constraintTop_toTopOf="@+id/imgArrowBack" />

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredo"
        android:text="Nama Lengkap"
        android:textColor="#6DB9EF"
        android:textSize="12sp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgArrowBack" />

    <EditText
        android:id="@+id/edtNamaLengkap"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredo"
        android:hint="Masukan Nama"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNama" />

    <TextView
        android:id="@+id/tvPhotoProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/fredo"
        android:text="Photo Profile"
        android:textColor="#6DB9EF"
        android:textSize="12sp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNamaLengkap" />

    <ImageView
        android:id="@+id/img_item_photo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:paddingTop="0dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_pp"
        app:layout_constraintStart_toStartOf="@+id/edtNamaLengkap"
        app:layout_constraintTop_toBottomOf="@+id/tvPhotoProfile"
        tools:src="@drawable/dummy_pp" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3081D0"
        android:fontFamily="@font/fredo"
        android:text="Submit"
        android:textSize="18sp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>